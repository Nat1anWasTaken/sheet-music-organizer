{
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js Debug",
        "preLaunchTask": "dev",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "outFiles": ["${workspaceFolder}/.next/**/*.js"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }